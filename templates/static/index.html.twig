{% extends 'base.html.twig' %}

{% block title %}Chatter | Home{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Welcome</h1>

    <p>
        This is Chatter. Chatter is a global feed of messages from people up to 280 characters long. 
        Sign in or sign up now to view the feed. Chatter is definitely not the same thing as Twitter.
    </p>
    <a href="{{ path('sign_in') }}"><div class="btn">Sign In</div></a>
    <a href="{{ path('sign_up') }}"><div class="btn">Sign Up</div></a>
</div>
{% endblock %}
